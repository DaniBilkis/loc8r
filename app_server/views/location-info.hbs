<div class="row page-header">
    <div class="col-lg-12">
        <h1>{{pageHeader.title}}</h1>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-9">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <p class="rating">{{outputRating location.rating}}</p>
                <p>{{location.address}}</p>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">Opening hours</h2>
                    </div>
                    <div class="panel-body">
                        {{#each location.openingTimes}}
                            <p>{{this.days}} :
                            {{#if this.closed}}
                                closed
                            {{else}}
                                {{this.opening}} - {{this.closing}}
                            {{/if}}
                            </p>
                        {{/each}}
                    </div>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">Facilities</h2>
                    </div>
                    <div class="panel-body">
                        {{#each location.facilities}}
                            <span class="label label-warning">
                                <span class="glyphicon glyphicon-ok"></span>
                                {{this}}
                            </span>
                            &nbsp;
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 location-map">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">Location map</h2>
                    </div>
                    <div class="panel-body"><img class="img-responsive img-rounded" src="http://maps.googleapis.com/maps/api/staticmap?center={{location.coords.lat}},{{location.coords.long}}&amp;zoom=17&amp;size=400x350&amp;sensor=false&amp;markers={{location.coords.lat}},{{location.coords.long}}&amp;scale=2"/></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-primary review-panel">
                    <div class="panel-heading"><a class="btn btn-default pull-right" href="/location/review/new">Add review</a>
                        <h2 class="panel-title">Customer reviews</h2>
                    </div>
                    <div class="panel-body review-container">
                        {{#each location.reviews}}
                        <div class="row">
                            <div class="review">
                                <div class="well well-sm review-header">
                                    <span class="rating">
                                        {{outputRating this.rating}}
                                    </span>
                                    <span class="reviewAuthor">{{author}}</span>
                                    <small class="reviewTimestamp">{{timestamp}}</small>
                                </div>
                                <div class="col-xs-12">
                                    <p>{{reviewText}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-3">
        <p class="lead">{{sidebar.context}}</p>
        <p>{{sidebar.callToAction}}</p>
    </div>
</div>